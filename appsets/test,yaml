apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: all-helms-on-multiple-clusters
spec:
  generators:
    - matrix:
        generators:
          - git:
              repoURL: https://github.com/santosh-gh/k8s-18-deployment.git
              revision: main
              directories:
                - path: multi-manifests/*
          - clusters: {}
          
  template:
    metadata:
      name: '{{path.basename}}'
    spec:
      project: default
      source:
        repoURL: https://github.com/santosh-gh/k8s-18-deployment.git
        path: '{{path}}'
      destination:
        server: https://kubernetes.default.svc
        namespace: newtest
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
        - CreateNamespace=true